<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041055"
    android:backgroundTint="#030B37"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:text=" Username"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
/>
    <EditText
        android:id="@+id/etSignin_Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:hint="Scrivi Username"
        android:singleLine="true"
        android:textSize="25dp"
        />
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
    android:text=" Password"
    android:layout_marginTop="10dp"
    android:textSize="30dp"
    />

    <EditText
        android:id="@+id/etSignin_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:hint="Scrivi Password"
        android:textSize="25dp"
        android:singleLine="true"
        android:password="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:text="Conferma Password"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        />

    <EditText
        android:id="@+id/etSignin_Password_Conferma"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_height="wrap_content"
        android:hint="Conferma Password"
        android:textSize="25dp"
        android:singleLine="true"
        android:password="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:text="Città di provenienza (campo facoltativo)"
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/etCittàProvenienza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:singleLine="true"
        android:hint="Inserisci la tua città di proveienza"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tvErrorePassword_Signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Le password non corrispondono"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:textColor="#FFFF0000" />
    <TextView
        android:id="@+id/tvErroreUsername_Signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username già in uso, prova con un altro"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:textColor="#FFFF0000" />

    <TextView
        android:id="@+id/tvErroreUsernameOrPassword_Signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I campi Username e Password non possono essere vuoti"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:textColor="#FFFF0000" />

    <TextView
        android:id="@+id/tvErroreLunghezza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username/Password devono essere max 25 caratteri"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:textColor="#FFFF0000" />

    <Button
        android:id="@+id/bttRegistrati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrati"
        />

    <ProgressBar
        android:id="@+id/pbSignin"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginTop="15dp"
        android:indeterminate="true"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/bttBackSignin_to_LoginSignin"
        android:layout_width="61dp"
        android:layout_height="57dp"
        android:layout_marginRight="150dp"
        android:backgroundTint="#08409844"
        android:scaleType="fitCenter"
        android:src="@drawable/back_bottone_verde"
        android:visibility="visible" />


</LinearLayout>